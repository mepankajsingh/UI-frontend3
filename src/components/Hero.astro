---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="bg-gradient-to-r from-primary-600 to-primary-800 text-white py-12 md:py-20 px-4">
  <div class="container mx-auto max-w-4xl text-center">
    <h1 class="text-3xl md:text-4xl font-bold mb-4">{title}</h1>
    <p class="text-lg md:text-xl text-primary-100 max-w-2xl mx-auto">{subtitle}</p>
  </div>
</div>
